<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">

      <h1>Edit Profile</h1>

      <form action="/locations/<%= profile.locationId %>/profiles/<%= profile.id %>/update" method="post">
        <div class="form-group">
          <label for="username">Username</label>
          <input value="<%= profile.username %>" type="text" class="form-control" name="username" aria-describedby="usernameHelp" placeholder="Enter Username">
        </div>

        <div class="form-group">
          <label for="avatar">Avatar</label>
          <input value="<%= profile.avatar %>" type="text" class="form-control" name="avatar"  placeholder="image URL">
        </div>

        <div class="form-group">
          <label for="pic1">Sample Photo</label>
          <input value="<%= profile.pic1 %>" type="text" class="form-control" name="pic1"  placeholder="image URL">
        </div>
        <div class="form-group">
          <label for="pic2">Sample Photo</label>
          <input value="<%= profile.pic2 %>" type="text" class="form-control" name="pic2"  placeholder="image URL">
        </div>
        <div class="form-group">
          <label for="pic3">Sample Photo</label>
          <input value="<%= profile.pic3 %>" type="text" class="form-control" name="pic3"  placeholder="image URL">
        </div>
        <div class="form-group">
          <label for="pic4">Sample Photo</label>
          <input value="<%= profile.pic4 %>" type="text" class="form-control" name="pic4"  placeholder="image URL">
        </div>



        <button type="submit" class="btn btn-primary">Update</button>
      </form>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>
