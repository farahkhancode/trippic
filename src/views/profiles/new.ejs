<!DOCTYPE html>
<html>
  <head>
    <% include ../static/partials/head.ejs %>
  </head>
  <body>
    <% include ../static/partials/navbar.ejs %>

    <main class="container">
       <% include ../static/partials/messages.ejs %>
      <h1>Create Your Profile</h1>
<!-- #1 -->
      <form action="/locations/<%= locationId %>/profiles/create" method="post">
        <div class="form-group">
          <label for="username">Username</label>
          <input type="text" class="form-control" name="username" aria-describedby="usernameHelp" placeholder="enter username">
           <small class="text-muted" id="usernameHelp">title must be 2 or more characters in length.</small>
        </div>

        <div class="form-group">
          <label for="avatar">Avatar</label>
          <input type="text" class="form-control" name="avatar"  placeholder="image URL">
        </div>


        <div class="form-group">
          <label for="aboutMe">About me</label>
          <textarea rows="4" class="form-control" name="aboutMe" placeholder="Tell us about yourself!"></textarea>
        </div>

        <div class="form-group">
          <label for="link">Portfolio</label>
          <input type="text" class="form-control" name="link"  placeholder="Portfolio URL">
        </div>


        <div class="form-group">
          <label for="pic1">Sample Photo</label>
          <input type="text" class="form-control" name="pic1"  placeholder="image URL">
        </div>
        <div class="form-group">
          <label for="pic2">Sample Photo</label>
          <input type="text" class="form-control" name="pic2"  placeholder="image URL">
        </div>
        <div class="form-group">
          <label for="pic3">Sample Photo</label>
          <input type="text" class="form-control" name="pic3"  placeholder="image URL">
        </div>
        <div class="form-group">
          <label for="pic4">Sample Photo</label>
          <input type="text" class="form-control" name="pic4"  placeholder="image URL">
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </main>

    <% include ../static/partials/baseScripts.ejs %>

  </body>
</html>
